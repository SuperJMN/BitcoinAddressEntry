<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:AvaloniaApplication13.Views"
             xmlns:viewModels="clr-namespace:AvaloniaApplication13.ViewModels"
             xmlns:controls="clr-namespace:AvaloniaApplication13.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication13.Views.SendView"
             x:DataType="viewModels:SendViewModel"
             x:CompileBindings="True">

	<StackPanel>
        <TextBlock TextWrapping="Wrap">This is a destination selector that supports regular addresses and payjoin addresses, like the Send view</TextBlock>
		<controls:PaymentDestinationControl DataContext="{Binding PaymentViewModel}" />
	</StackPanel>
</UserControl>
